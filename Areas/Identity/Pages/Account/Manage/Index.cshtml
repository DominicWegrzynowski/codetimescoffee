@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row gx-4 gx-lg-5 mx-5 justify-content-center">
        <div class="col-md-6 col-lg-6 col-xl-6">    
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group pb-3">
                    <label asp-for="Input.Image"></label>
                    <input type="file" asp-for="Input.Image" class="form-control" accept=".png,.jpg,.bmp,.tif,.gif" />
                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="@Model.CurrentImage" class="img-fluid" rounded-circle width="100" />
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}